datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id String @unique
  messages Message[]
  admin    Group[]  @relation("Admin")
  userGroup User_Group[]
}

model User_Group{
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  id_user String
  user  User @relation(fields: [id_user], references: [user_id])
  id_group String @db.ObjectId
  group Group @relation(fields: [id_group],  references: [id])

  @@unique([id_user, id_group])
}

model Group {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  ownerId  String
  owner    User     @relation("Admin", fields: [ownerId], references: [user_id])
  messages Message[]
  userGroup User_Group[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  userId    String
  groupId   String?  @db.ObjectId
  user      User     @relation(fields: [userId], references: [user_id])
  group     Group?   @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
}
